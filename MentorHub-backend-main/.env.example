# Server Configuration
PORT=9900
PREFIX=/v1

# Database Configuration
DB_URL=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/mentorhub?appName=Cluster0

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production
JWT_ACCESS_EXPIRATION_MINUTES=30
JWT_VERIFICATION_SECRET=your-super-secret-jwt-verification-key-change-in-production
JWT_VERIFICATION_EXPIRATION_MINUTES=5

# Cloudinary Configuration (for image uploads)
# Get your credentials from https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (SMTP)
# For Gmail, use: smtp.gmail.com, port 587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@mentorhub.com

# Razorpay Configuration (for payments)
# Get your credentials from https://razorpay.com
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Zoom Configuration (for video meetings)
# Get your credentials from https://marketplace.zoom.us
ZOOM_ACCOUNT_ID=your-zoom-account-id
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
